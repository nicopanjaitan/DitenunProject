<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".function.activity.LoginActivity">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:scaleType="fitCenter"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/logo_login"
            android:layout_width="170dp"
            android:layout_height="122dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_ditenun_login" />

        <TextView
            android:id="@+id/text_logo_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Digital Tenun Nusantara"
            android:textAlignment="center"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:padding="7dp"
            android:background="@color/birupudar"
            android:ems="10"
            android:hint="Email atau No HP"
            android:inputType="textEmailAddress"
            android:scaleType="fitCenter" />

        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:padding="7dp"
            android:background="@color/birupudar"
            android:scaleType="fitCenter"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Password"/>

        <Button
            android:id="@+id/login"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:padding="7dp"
            android:background="@color/biru"
            android:scaleType="fitCenter"
            android:ems="10"
            android:textSize="18dp"
            android:textColor="@color/putih"
            android:text="Masuk"/>

        <Button
            android:id="@+id/gotoRegister"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:ems="10"
            android:background="@null"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:textColor="@color/biru"
            android:text="Daftar sekarang!"/>
    </LinearLayout>

</RelativeLayout>
